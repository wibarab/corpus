########## STRUCTURES ############

### EDIT ATTRIBUTES - PROPERTIES MANUALLY! (e.g. MULTIVALUE, MAXLISTSIZE, ...

### cf. https://www.sketchengine.eu/documentation/corpus-configuration-file-all-features/

STRUCTURE "doc" {
	TYPE "map32"

	ATTRIBUTE "id" {
		TYPE "MD_MI"
 	 	# MULTIVALUE y
        	# MULTISEP " "
	}
	ATTRIBUTE "researcher" {
		TYPE "MD_MI"
	}

	ATTRIBUTE "campaign" {
		TYPE "MD_MI"
	}

	ATTRIBUTE "speakers" {
		TYPE "MD_MI"
 	  	MULTIVALUE "1"
        	MULTISEP " "
	}

	ATTRIBUTE "geo" {
		TYPE "MD_MI"
 	  	MULTIVALUE "1"
        	MULTISEP " "
	}

	ATTRIBUTE "topic" {
		TYPE "MD_MI"
 	  	MULTIVALUE "1"
        	MULTISEP " "
	}

}

